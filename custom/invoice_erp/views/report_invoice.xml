<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="report_invoice_document_custom">
    <t t-call="web.external_layout">
      <t t-foreach="docs" t-as="o">
        <main>
          <div class="page">

            <!-- HEADER -->
            <table width="100%" style="font-size:13px; border-collapse:collapse;">
              <tr>
                <td style="width:45%; text-align:left; vertical-align:top;">
                  <strong style="color:#800000; font-size:14px; text-decoration:underline;">
                    SAMEER SHARAF AL OTAIBI TRADING COMPANY
                  </strong><br/>
                  C.R.: 4030216154<br/>
                  VAT Reg.: 311299944700003<br/>
                  Al Anwar Centre, Showroom No.12, Baladiya Street<br/>
                  Jeddah 23334, Saudi Arabia<br/>
                  Tel: 0536122833<br/>
                  Email: ssaoe.jeddah@gmail.com
                </td>
                <td style="width:10%; text-align:center;">
                  <img t-att-src="'/invoice_erp/static/src/img/faakart_logo.png'" style="max-height:100px;"/>
                </td>
                <td style="width:45%; text-align:right; vertical-align:top;">
                  <strong style="color:#800000; font-size:14px; text-decoration:underline;">
                    شركة سمير شرف العتيبي التجارية
                  </strong><br/>
                  السجل التجاري: 4030216154<br/>
                  ضريبة القيمة المضافة: 311299944700003<br/>
                  مركز الأنوار، معرض رقم 12، شارع البلدية<br/>
                  جدة 23334، المملكة العربية السعودية<br/>
                  هاتف: 0536122833<br/>
                  البريد الإلكتروني: ssaoe.jeddah@gmail.com
                </td>
              </tr>
            </table>

            <div style="background-color:#800000; color:#fff; text-align:center; font-size:16px; font-weight:bold; padding:4px; border-radius:4px; margin:6px 0;">
              Tax Invoice / فاتورة ضريبية
            </div>

            <!-- CUSTOMER INFO -->
            <table width="100%" style="font-size:11px; border:1px solid #000; margin-top:6px; border-collapse:collapse;">
              <tr>
                <td colspan="2" style="border:1px solid #000; padding:4px;">
                  <strong>Sold To / العميل :</strong><br/>
                  <span t-field="o.partner_id.name"/>
                </td>
              </tr>
              <tr>
                <td style="border:1px solid #000; padding:4px;">
                  <strong>VAT No:</strong>
                  <span t-field="o.partner_id.vat"/>
                </td>
                <td style="border:1px solid #000; padding:4px;">
                  <strong>Invoice No:</strong>
                  <span t-field="o.name"/>
                  <span style="display:inline-block; width:20px;"></span>
                  <strong>Invoice Date:</strong>
                  <span t-field="o.invoice_date"/>
                </td>
              </tr>
              <tr>
                <td style="border:1px solid #000; padding:4px;">
                  <strong>Delivery Date:</strong>
                </td>
                <td style="border:1px solid #000; padding:4px;">
                  <strong>P.O No / رقم أمر الشراء:</strong>
                  <span style="display:inline-block; width:15px;"></span>
                  <strong>Terms / الشروط:</strong>
                  <span style="display:inline-block; width:15px;"></span>
                  <strong>Delivery Note No / رقم إشعار التسليم:</strong>
                </td>
              </tr>
            </table>

            <!-- INVOICE TABLE -->
            <table width="100%" style="font-size:11px; border-collapse:collapse; margin-top:6px;">
              <thead>
                  <tr style="background-color:#f0f0f0;">
                    <th style="border:1px solid #000; padding:4px;">S.N<br/><small>مسلسل</small></th>
                    <th style="border:1px solid #000; padding:4px;">Item<br/><small>الصنف</small></th>
                    <th style="border:1px solid #000; padding:4px;">Description<br/><small>الوصف</small></th>
                    <th style="border:1px solid #000; padding:4px;">QTY<br/><small>الكمية</small></th>
                    <th style="border:1px solid #000; padding:4px;">Unit<br/><small>الوحدة</small></th>
                    <th style="border:1px solid #000; padding:4px;">S. Rate<br/><small>سعر الوحدة</small></th>
                    <th style="border:1px solid #000; padding:4px;">Disc<br/><small>الخصم</small></th>
                    <th style="border:1px solid #000; padding:4px;">Amount<br/><small>المبلغ</small></th>
                    <th style="border:1px solid #000; padding:4px;">VAT%<br/><small>ضريبة القيمة المضافة %</small></th>
                    <th style="border:1px solid #000; padding:4px;">VAT<br/><small>ضريبة</small></th>
                    <th style="border:1px solid #000; padding:4px;">Total Price<br/><small>السعر الإجمالي</small></th>
                  </tr>
                </thead>

              <tbody>
                <tr t-foreach="o.invoice_line_ids" t-as="line" t-foreach-index="i">
                  <t t-set="row_index" t-value="0 if i is None else i"/>
                  <td style="border:1px solid #000; padding:4px;">
                    <t t-esc="row_index + 1"/>
                  </td>
                  <td style="border:1px solid #000; padding:4px;">
                    <t t-esc="line.product_id.default_code or ''"/>
                  </td>
                  <td style="border:1px solid #000; padding:4px;">
                    <t t-if="line.name">
                      <t t-esc="line.name"/>
                    </t>
                  </td>
                  <td style="border:1px solid #000; padding:4px;" t-esc="line.quantity"/>
                  <td style="border:1px solid #000; padding:4px;">
                    <t t-if="line.product_uom_id.name == 'Meter' or line.product_uom_id.name == 'M'">MTR</t>
                    <t t-elif="line.product_uom_id.name == 'Unit' or line.product_uom_id.name == 'Units'">PCS</t>
                    <t t-else=""><t t-esc="line.product_uom_id.name"/></t>
                  </td>
                  <td style="border:1px solid #000; padding:4px;" t-esc="line.price_unit"/>
                  <td style="border:1px solid #000; padding:4px;" t-esc="line.discount"/>
                  <td style="border:1px solid #000; padding:4px;" t-esc="line.price_subtotal"/>
                  <td style="border:1px solid #000; padding:4px;">15%</td>
                  <td style="border:1px solid #000; padding:4px;" t-esc="line.price_total - line.price_subtotal"/>
                  <td style="border:1px solid #000; padding:4px;" t-esc="line.price_total"/>
                </tr>
              </tbody>
            </table>

            <!-- TOTALS -->
            <table width="100%" style="font-size:11px; margin-top:8px;">
              <tr>
                <td>
                  <p>
                    <strong>Amount in Words:</strong><br/>
                    <span t-esc="o.currency_id.amount_to_text(o.amount_total)"/>
                  </p>
                </td>
                <td>
                  <table style="border:1px solid #000; width:300px;">
                    <tr>
                      <td>Net Amount</td>
                      <td><span t-esc="o.amount_untaxed"/></td>
                    </tr>
                    <tr>
                      <td>VAT Amount</td>
                      <td><span t-esc="o.amount_tax"/></td>
                    </tr>
                    <tr>
                      <td><strong>Grand Total</strong></td>
                      <td><strong><span t-esc="o.amount_total"/></strong></td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>

          </div>
        </main>
      </t>
    </t>
  </template>
</odoo>
