<odoo>
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">
        <xpath expr="." position="replace">
            <t t-call="web.external_layout">
                <div class="page">
                    <!-- Your header -->
                    <h2>شركة سمير شرف العتيبي التجارية</h2>
                    <p>الرقم الضريبي: 4030216154</p>
                    <p>العنوان: Saudi Arabia</p>
                    <p>Email: saeco.jeddah@gmail.com</p>

                    <!-- Invoice Info -->
                    <div>
                        <p><strong>Sold to:</strong> <span t-field="o.partner_id.name"/></p>
                        <p><strong>VAT No:</strong> <span t-esc="o.partner_id.vat or ''"/></p>
                        <p><strong>Invoice No:</strong> <span t-field="o.name"/></p>
                        <p><strong>Invoice Date:</strong> <span t-field="o.invoice_date"/></p>
                    </div>

                    <!-- Table and totals (add your own markup) -->
                </div>
            </t>
        </xpath>
    </template>
</odoo>






