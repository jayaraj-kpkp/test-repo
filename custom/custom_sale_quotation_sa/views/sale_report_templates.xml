<odoo>
  <template id="report_saleorder_document_custom" inherit_id="sale.report_saleorder_document">
    <!-- Add Arabic title -->
    <xpath expr="//h2" position="replace">
      <h2 style="text-align:center; color:#800000;">
        <strong>Sales Quotation<br/>عرض سعر</strong>
      </h2>
    </xpath>

    <!-- Add Delivery Terms -->
    <xpath expr="//div[@class='page']" position="inside">
      <t t-if="o.delivery_terms">
        <p><strong>Delivery Terms:</strong> <span t-esc="o.delivery_terms"/></p>
        <p><strong>شروط التسليم:</strong> <span t-esc="o.delivery_terms"/></p>
      </t>
    </xpath>
  </template>
</odoo>
